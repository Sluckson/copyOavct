<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#aaa" android:endColor="#eee" android:angle="90"/>
        </shape>
    </item>
    <item android:left="-40dp" android:top="-20dp" android:right="-30dp" android:bottom="20dp">
        <shape android:shape="oval">
            <gradient android:startColor="#40eeeeee" android:endColor="#30dddddd" android:angle="90"/>
        </shape>
    </item>
</layer-list>
