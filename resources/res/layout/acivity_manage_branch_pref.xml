<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:tag="layout/acivity_manage_branch_pref_0" android:background="@color/bdt_white" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <com.google.android.material.appbar.AppBarLayout android:id="@+id/app_bar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:elevation="0dp">
