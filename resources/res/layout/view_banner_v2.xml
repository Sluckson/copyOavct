<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/medallia_banner_root_view" android:background="@color/medallia_banner_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/feedback_invitation">
    <ImageView android:id="@+id/medallia_negative_view" android:padding="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/md_close_banner" android:layout_alignParentRight="true" android:alpha="0.6"/>
    <RelativeLayout android:id="@+id/text_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="17sp" android:textStyle="bold" android:textColor="@color/medallia_title_color" android:gravity="center" android:id="@+id/medallia_banner_title_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:layout_marginTop="12dp" android:layout_marginRight="35dp" android:maxLength="30" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="15sp" android:gravity="center" android:id="@+id/medallia_banner_message_text_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="35dp" android:layout_marginTop="3dp" android:layout_marginRight="35dp" android:layout_marginBottom="10dp" android:maxLength="70" android:layout_below="@+id/medallia_banner_title_text_view" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView android:textSize="17sp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/medallia_positive_view" android:layout_width="match_parent" android:layout_height="50dp" android:text="Provide Feedback" android:layout_below="@+id/text_container" android:layout_centerHorizontal="true"/>
</RelativeLayout>
