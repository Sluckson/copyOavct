<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="16sp" android:textColor="@color/iaa_white" android:id="@+id/txt_section_message" android:background="@drawable/proceednext_bgshadow" android:padding="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <LinearLayout android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/iaa_txt_red" android:id="@+id/error_text" android:paddingTop="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/txt_year_make_model_tbp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/ToBePaidText.Row.Title"/>
        <RelativeLayout android:orientation="vertical" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:textColor="@color/darkgray_lightgray_selector" android:id="@+id/lbl_for_stock_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_tobepaid_stk"/>
            <TextView android:textSize="12sp" android:textColor="@color/darkgray_lightgray_selector" android:id="@+id/txt_stock_no" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/lbl_for_stock_no" android:layout_alignBaseline="@+id/lbl_for_stock_no"/>
            <TextView android:textSize="12sp" android:textColor="@color/darkgray_lightgray_selector" android:ellipsize="marquee" android:id="@+id/txt_vin_tbp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/txt_stock_no" android:layout_alignBaseline="@+id/lbl_for_stock_no"/>
            <TextView android:textSize="12sp" android:textColor="@color/darkgray_lightgray_selector" android:id="@+id/txt_branch_tbp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/lbl_for_stock_no"/>
        </RelativeLayout>
        <TextView android:textSize="16sp" android:id="@+id/txt_amount" android:paddingLeft="5dp" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
