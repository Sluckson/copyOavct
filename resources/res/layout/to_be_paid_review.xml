<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:background="@color/iaa_white" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="56dp">
        <ImageButton android:gravity="center_vertical" android:id="@+id/back_button" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_arrow_left_red"/>
        <TextView android:textSize="20sp" android:textColor="@color/iaa_black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_header_tobepaid_selection" android:paddingLeft="30dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginRight="20dp" android:text="@string/lbl_tobe_paid" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="@color/iaa_white" android:gravity="center_vertical" android:background="@color/iaa_black" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/lbl_confirm_payment_selection" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/proceednext_bgshadow" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_payment_logo" android:paddingRight="5dp" android:layout_width="65dp" android:layout_height="match_parent" android:src="@drawable/afc_logo"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/bottom_dividerline"/>
        <LinearLayout android:orientation="vertical" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/iaa_txt_gray" android:paddingLeft="3dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="@string/lbl_items_countnum" android:layout_weight="2"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/vehicle_count" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/iaa_txt_gray" android:paddingLeft="3dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="@string/lbl_payment_method" android:layout_weight="2"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/txt_payment_method" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_payment_method" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/iaa_txt_gray" android:paddingLeft="3dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="@string/lbl_finance_terms" android:layout_weight="2"/>
                <TextView android:textSize="14sp" android:textStyle="bold" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/txt_finance_type" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/iaa_txt_gray" android:gravity="center_vertical" android:paddingLeft="3dp" android:layout_width="40dp" android:layout_height="match_parent" android:text="@string/usd_total" android:layout_weight="2"/>
                <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/iaa_txt_green" android:gravity="center_vertical" android:id="@+id/txt_finance_amount" android:layout_width="0dp" android:layout_height="wrap_content" android:text="fndjkv" android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ListView android:id="@+id/selection_list" android:layout_width="match_parent" android:layout_height="0dp" android:listSelector="@android:color/transparent" android:layout_weight="1"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/llToBePaidPassword" android:background="@drawable/bottom_bgshadow" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/lbl_secuirty_password"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <EditText android:id="@+id/txt_password" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/hint_password" android:layout_weight="1" android:inputType="textPassword"/>
            <Button android:textSize="18sp" android:textColor="@color/iaa_white" android:id="@+id/btn_submit" android:background="@drawable/btn_green_disabled" android:layout_width="100dp" android:layout_height="match_parent" android:layout_marginBottom="5dp" android:text="@string/lbl_submit"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
