<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="@android:color/black" android:id="@+id/txt_dailog_year_make_model" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2010 FORD FOCUS" android:layout_above="@+id/fees_list"/>
    <View android:background="@color/tobepaid_dialog_fees_label_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="12dp" android:layout_below="@+id/value_fees"/>
    <ListView android:id="@+id/fees_list" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/total_divider"/>
    <View android:id="@+id/total_divider" android:background="@color/background_material_dark" android:layout_width="match_parent" android:layout_height="4px" android:layout_above="@+id/txt_fees_total"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/background_material_dark" android:id="@+id/txt_fees_total" android:paddingTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$4000.00" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
