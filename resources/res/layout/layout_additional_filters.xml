    <RelativeLayout android:id="@+id/layout_more_filter" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/additional_filters">
        <TextView android:textStyle="bold" android:textColor="@color/iaa_vehicle_search_blue" android:gravity="center" android:id="@+id/txt_more_filter_btn" android:background="@color/iaa_white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/lbl_more_filters" android:layout_centerInParent="true" android:textAllCaps="true" android:elevation="3dp"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/layout_feedback" android:background="#f2f2f2" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/layout_more_filter">
        <TextView android:textStyle="bold" android:textColor="@color/iaa_vehicle_search_blue" android:gravity="center" android:id="@+id/txt_feedback_btn" android:background="@color/iaa_white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/lbl_leave_feedback" android:layout_centerInParent="true" android:textAllCaps="true" android:elevation="3dp"/>
