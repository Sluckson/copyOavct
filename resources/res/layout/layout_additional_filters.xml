        <Spinner android:entries="@array/default_array_refiner_airbag" android:id="@+id/airBagsSpinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:spinnerMode="dialog"/>
        <View android:id="@+id/refiner_separator6" android:background="#bebdbd" android:layout_width="match_parent" android:layout_height="1px"/>
