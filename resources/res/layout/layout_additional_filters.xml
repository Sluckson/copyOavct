        <View android:id="@+id/refiner_separator" android:background="#bebdbd" android:layout_width="match_parent" android:layout_height="1px"/>
        <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_loss_type"/>
