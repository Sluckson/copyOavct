        <RelativeLayout android:id="@+id/relativelayout" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="#de000000" android:id="@+id/txt_vehicle_include" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/lbl_include_vehicles_not_assigned_to_an_auction"/>
            <Switch android:id="@+id/show_include_vehicle_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/txt_vehicle_include" android:layout_alignParentRight="true"/>
