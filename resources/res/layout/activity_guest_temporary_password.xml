<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/md_presale_productdtl_bg" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
            <TextView android:textSize="25sp" android:textColor="@color/iaa_red" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/security_set_up" android:layout_marginStart="8dp"/>
            <RelativeLayout android:orientation="horizontal" android:id="@+id/relativelayout" android:background="@color/search_vehicle_top_bg_color" android:padding="12dp" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
                <TextView android:textSize="22sp" android:textColor="@color/iaa_black" android:id="@+id/lbl_reset_password" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/please_reset_your_password"/>
                <TextView android:textSize="16sp" android:textColor="@color/iaa_black" android:id="@+id/tv_current_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/current_password" android:layout_below="@+id/lbl_reset_password" android:textAllCaps="true"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_current_password" android:background="@drawable/search_view_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_current_password">
                    <EditText android:textColor="#222222" android:ellipsize="end" android:id="@+id/et_current_password" android:background="@android:color/transparent" android:focusableInTouchMode="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:imeOptions="actionDone" android:textIsSelectable="false" android:layout_marginStart="4dp"/>
                </LinearLayout>
                <TextView android:textSize="16sp" android:textColor="@color/iaa_black" android:id="@+id/tv_new_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/new_password" android:layout_below="@+id/ll_current_password" android:textAllCaps="true"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_new_password" android:background="@drawable/search_view_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_new_password">
                    <EditText android:textColor="#222222" android:ellipsize="end" android:id="@+id/et_new_password" android:background="@android:color/transparent" android:focusableInTouchMode="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:imeOptions="actionDone" android:textIsSelectable="false" android:layout_marginStart="4dp"/>
                </LinearLayout>
                <TextView android:textSize="16sp" android:textColor="@color/iaa_black" android:id="@+id/tv_confirm_new_password" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="@string/re_enter_new_password" android:layout_below="@+id/ll_new_password" android:textAllCaps="true"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_confirm_new_password" android:background="@drawable/search_view_background" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_confirm_new_password">
                    <EditText android:textColor="#222222" android:ellipsize="end" android:id="@+id/et_confirm_new_password" android:background="@android:color/transparent" android:focusableInTouchMode="true" android:longClickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:singleLine="true" android:imeOptions="actionDone" android:textIsSelectable="false" android:layout_marginStart="4dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_cancel_submit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/ll_confirm_new_password">
                    <Button android:enabled="false" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/iaa_vehicle_search_blue" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/btn_cancel_rounded" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp" android:text="@string/lbl_cancel" android:layout_weight="1"/>
                    <Button android:enabled="false" android:textSize="16sp" android:textStyle="bold" android:textColor="@color/iaa_white" android:gravity="center" android:id="@+id/btn_submit" android:background="@drawable/btn_submit_rounded" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp" android:text="@string/submit" android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
</LinearLayout>
