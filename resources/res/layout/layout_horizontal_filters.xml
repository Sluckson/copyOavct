<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout_horizontal_refiners" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:id="@+id/separator1" android:background="@drawable/line_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="12dp"/>
    <TextView android:textColor="#212121" android:id="@+id/lbl_recently_joined" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="12dp" android:text="@string/recently_joined_auctions" android:layout_below="@+id/separator1"/>
    <HorizontalScrollView android:scrollbarSize="1dp" android:id="@+id/horizontal_scrollview_refiners" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_below="@+id/lbl_recently_joined">
        <LinearLayout android:orientation="horizontal" android:id="@+id/layout_refiners" android:paddingRight="8dp" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp"/>
    </HorizontalScrollView>
    <View android:id="@+id/separator2" android:background="@drawable/line_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/horizontal_scrollview_refiners"/>
</RelativeLayout>
