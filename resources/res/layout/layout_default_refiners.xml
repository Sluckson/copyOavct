<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp">
    <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_vehicle_type"/>
    <Spinner android:entries="@array/default_spinner_data" android:id="@+id/spn_default_vehicle_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:spinnerMode="dialog"/>
    <View android:id="@+id/refiner_separator1" android:background="#bebdbd" android:layout_width="match_parent" android:layout_height="1px"/>
    <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:id="@+id/lbl_sub_type" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/lbl_automobile_types"/>
    <Spinner android:entries="@array/default_spinner_data" android:id="@+id/spn_default_vehicle_sub_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:spinnerMode="dialog"/>
    <View android:id="@+id/refiner_separator2" android:background="#bebdbd" android:layout_width="match_parent" android:layout_height="1px"/>
    <RelativeLayout android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:id="@+id/lbl_start_year" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_start_year" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lbl_default_start_year" android:paddingLeft="8dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_any" android:layout_below="@+id/lbl_start_year" android:layout_alignParentLeft="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_to" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:id="@+id/lbl_end_year" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_end_year" android:layout_alignParentRight="true"/>
        <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lbl_default_end_year" android:paddingLeft="16dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_any" android:layout_below="@+id/lbl_end_year" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View android:id="@+id/refiner_separator3" android:background="#bebdbd" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginTop="8dp"/>
    <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/lbl_make"/>
    <Spinner android:entries="@array/default_spinner_data" android:id="@+id/spn_default_vehicle_make" android:layout_width="match_parent" android:layout_height="wrap_content" android:spinnerMode="dialog"/>
    <View android:id="@+id/refiner_separator4" android:background="#bebdbd" android:layout_width="match_parent" android:layout_height="1px"/>
    <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/lbl_model"/>
    <Spinner android:entries="@array/default_spinner_data" android:id="@+id/spn_default_vehicle_model" android:layout_width="match_parent" android:layout_height="wrap_content" android:spinnerMode="dialog"/>
</LinearLayout>
