<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:tag="layout/fragment_refiner_result_land_0" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="@dimen/ten_inch_tablet_width" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <View android:id="@+id/vwSeparatorToolbar" android:background="@color/bdt_gray_light" android:layout_width="@dimen/ten_inch_tablet_width" android:layout_height="1dp" android:layout_marginTop="3dp"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/cl_search_container" android:background="@drawable/rounded_corner_search_panel" android:paddingTop="11dp" android:paddingBottom="11dp" android:focusable="true" android:visibility="visible" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
            <LinearLayout android:id="@+id/llMicClr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true">
                <ImageButton android:id="@+id/img_clear_text" android:background="@drawable/ic_cross_black" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="10dp"/>
                <ImageButton android:id="@+id/img_voice_text" android:background="@drawable/ic_microphone_black_shape" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="10dp"/>
            </LinearLayout>
            <TextView android:textSize="15sp" android:textStyle="normal" android:textColor="@color/bdt_gray_darkest" android:textColorHint="@color/bdt_gray" android:ellipsize="end" android:id="@+id/ed_search_result" android:background="@null" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/hint_search_vehicle" android:maxLines="1" android:singleLine="true" android:drawablePadding="8dp" android:lineSpacingExtra="10sp" android:imeOptions="actionSearch" android:drawableStart="@drawable/ic_search_find" android:fontFamily="sans-serif" android:layout_marginStart="10dp" android:layout_toStartOf="@+id/llMicClr" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <FrameLayout android:orientation="vertical" android:id="@+id/flContainer" android:layout_width="wrap_content" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvResultList" android:visibility="visible" android:scrollbars="vertical" android:clickable="true" android:layout_width="@dimen/ten_inch_tablet_width" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            <ProgressBar android:layout_gravity="center" android:id="@+id/pbRefinerResult" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyle"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/fab" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:src="@drawable/ic_top_arrow" app:backgroundTint="@color/bdt_red"/>
            <TextView android:textSize="18sp" android:gravity="center" android:id="@+id/tvEmptyMessage" android:visibility="gone" android:layout_width="@dimen/ten_inch_tablet_width" android:layout_height="match_parent" android:text="@string/lbl_no_current_vehicles"/>
        </FrameLayout>
    </LinearLayout>
    <fragment android:name="androidx.navigation.fragment.NavHostFragment" android:id="@+id/auction_sales_nav_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toRightOf="@+id/flContainer" app:defaultNavHost="false"/>
</LinearLayout>
