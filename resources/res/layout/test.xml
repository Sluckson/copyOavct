<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/lostprebid_action_layout" android:padding="16dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="1">
            <RelativeLayout android:id="@+id/section_your_bid" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.5">
                <TextView android:textSize="14sp" android:textColor="@color/iaa_product_detail_txt" android:id="@+id/txt_your_bid_lbl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="YOUR BID" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_date_paid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/txt_your_bid_lbl" android:layout_centerInParent="true" android:layout_centerHorizontal="true">
                    <TextView android:textSize="24sp" android:textColor="@color/md_product_detail_sold" android:id="@+id/lost_prebid_bid_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$4000" android:textAllCaps="false"/>
                </LinearLayout>
            </RelativeLayout>
            <View android:id="@+id/sec_separator" android:background="#d8d8d8" android:layout_width="1px" android:layout_height="48dp" android:layout_marginTop="12dp"/>
            <RelativeLayout android:id="@+id/section_win_bid" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="0.5">
                <TextView android:textSize="14sp" android:textColor="#a5a5a5" android:id="@+id/lbl_win_bid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="WINNING BID" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
                <TextView android:textSize="24sp" android:textColor="@color/md_product_detail_sold" android:id="@+id/lost_prebid_winning_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$7000" android:layout_below="@+id/lbl_win_bid" android:layout_centerHorizontal="true" android:textAllCaps="false"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="@color/iaa_product_detail_txt" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="You lost the bid by"/>
            <TextView android:textSize="20sp" android:textColor="@color/iaa_red_dark" android:id="@+id/lost_prebid_amount_by" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="$250"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
