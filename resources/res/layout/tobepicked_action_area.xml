<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/tobepicked_action_layout" android:padding="16dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="12sp" android:textColor="#888888" android:id="@+id/tobepicked_action_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pick_up_by" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
