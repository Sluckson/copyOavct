<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/history_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp">
        <TextView android:textSize="18sp" android:textColor="#990703" android:id="@+id/lbl_history" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="History"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/card_view" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="@dimen/productdtl_card_view_corner_radius" app:cardElevation="@dimen/productdtl_cardview_elevation" app:cardUseCompatPadding="true">
        <RelativeLayout android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/won_history_layout" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp">
                <ImageView android:id="@+id/icon_wonHistory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_dashboard_won_history" android:layout_alignParentLeft="true"/>
                <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lbl_wonhistory" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:text="@string/lbl_Won_History" android:layout_toRightOf="@+id/icon_wonHistory"/>
                <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/wonhistory_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/won_history_layout">
                <RelativeLayout android:id="@+id/lostprebid_layout" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp">
                    <ImageView android:id="@+id/icon_lost_prebids" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_dashboard_lost_prebid" android:layout_alignParentLeft="true"/>
                    <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lost_prebids_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"/>
                    <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lbl_lostorebid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:text="@string/lbl_lost_Prebids" android:layout_toRightOf="@+id/icon_lost_prebids" android:layout_alignParentTop="true" android:layout_marginStart="24dp" android:layout_toEndOf="@+id/icon_lost_prebids"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
