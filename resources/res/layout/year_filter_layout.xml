<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:id="@+id/txt_start_year" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:text="@string/lbl_start_year" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lbl_default_start_year" android:paddingLeft="8dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/lbl_any" android:layout_below="@+id/txt_start_year" android:layout_alignParentLeft="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/lbl_to" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/vehicle_refiner_spinner_label_text_size" android:textColor="@color/search_vehicle_txt_color" android:id="@+id/txt_end_year" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/lbl_end_year" android:layout_alignRight="@+id/lbl_default_end_year" android:layout_alignParentTop="true" android:layout_alignEnd="@+id/lbl_default_end_year"/>
        <TextView android:textSize="16sp" android:textColor="#de000000" android:id="@+id/lbl_default_end_year" android:paddingLeft="16dp" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:text="@string/lbl_any" android:layout_toLeftOf="@+id/txt_go_btn" android:layout_below="@+id/txt_end_year" android:layout_marginEnd="18dp" android:layout_toStartOf="@+id/txt_go_btn"/>
        <TextView android:enabled="false" android:textStyle="bold" android:textColor="@color/iaa_white" android:gravity="center" android:id="@+id/txt_go_btn" android:background="@drawable/go_btn_selector" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginRight="12dp" android:text="@string/lbl_go" android:layout_alignParentRight="true" android:textAllCaps="true"/>
        <View android:id="@+id/refiner_separator2" android:background="#bebdbd" android:paddingLeft="8dp" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginTop="8dp" android:layout_marginRight="12dp" android:layout_below="@+id/txt_go_btn"/>
    </RelativeLayout>
</LinearLayout>
