<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:droidfu="http://github.com/droidfu/schema" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_payment_info" android:background="@color/iaa_white" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textColor="@color/iaa_white" android:gravity="center_vertical" android:background="@color/iaa_black" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/lbl_confirm_payment" android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout android:background="@color/iaa_gray_bg_balance" android:paddingLeft="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/afc_header" android:paddingTop="5dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="35dp"/>
            <TextView android:textSize="16sp" android:gravity="center_vertical" android:id="@+id/payment_type" android:paddingTop="6dp" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/lbl_pay_for" android:layout_below="@+id/afc_header"/>
            <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="@color/iaa_txt_green" android:gravity="center_vertical" android:id="@+id/txt_finance_count" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_toRightOf="@+id/payment_type" android:layout_below="@+id/afc_header"/>
            <TextView android:textSize="12sp" android:gravity="center_vertical" android:paddingTop="8dp" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/usd_text" android:layout_toRightOf="@+id/txt_finance_count" android:layout_below="@+id/afc_header"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/proceednext_bgshadow" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="@color/iaa_black" android:id="@+id/txt_confirm_vehicle_count" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="16sp" android:id="@+id/txt_final_payment" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="16sp" android:id="@+id/txt_date" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <ListView android:id="@+id/selection_list" android:background="@color/lighter_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:divider="#f1f1f1" android:dividerHeight="1sp" android:layout_weight="1" android:footerDividersEnabled="false"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll_share_parent" android:background="@drawable/bottom_bgshadow" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/btn_share" android:background="@android:color/transparent" android:paddingLeft="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/ic_action_share" android:scaleType="fitStart" android:layout_weight="1"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_done" android:paddingRight="15dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/lbl_done" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
